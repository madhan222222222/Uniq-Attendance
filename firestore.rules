
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default deny all access
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to create their own user document upon registration
    // and read/update their own data after logging in.
    match /users/{userId} {
      allow create: if request.auth.uid == userId;
      allow read, update: if request.auth.uid == userId;
    }

    // Allow authenticated users to read and write to the main data collections.
    // For a production app, you would want more granular rules here,
    // for example, only allowing admins to write to 'staff'.
    match /students/{studentId} {
        allow read, write: if request.auth != null;
    }

    match /staff/{staffId} {
        allow read, write: if request.auth != null;
    }

    match /batches/{batchId} {
        allow read, write: if request.auth != null;
    }

    match /attendance/{attendanceId} {
        allow read, write: if request.auth != null;
    }
  }
}
