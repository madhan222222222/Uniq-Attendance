rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow new users to be created by anyone (for registration)
    match /users/{userId} {
      allow read, create: if true;
      allow update, delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow new staff to be created by anyone (for registration)
    match /staff/{staffId} {
       allow read, create: if true;
       allow update, delete: if request.auth != null;
    }

    // Allow any authenticated user to read/write to the main data collections.
    // This is a secure starting point, ensuring only logged-in users can access data.
    match /students/{studentId} {
      allow read, write: if request.auth != null;
    }

    match /batches/{batchId} {
      allow read, write: if request.auth != null;
    }

    match /attendance/{attendanceId} {
      allow read, write: if request.auth != null;
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
