
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow any logged-in user to read and write to the entire database.
    // This is a common setup for development to ensure the app works,
    // while still requiring users to be authenticated.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
