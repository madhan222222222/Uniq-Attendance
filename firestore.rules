
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all access
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow anyone to create a user (for registration)
    match /users/{userId} {
      allow create: if true;
      // Allow authenticated users to read/write their own data
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read students, staff, and batches
    match /(students|staff|batches)/{docId} {
      allow read: if request.auth != null;
    }
    
    // Allow authenticated users (staff/admin) to create new staff members
    match /staff/{staffId} {
        allow create: if request.auth != null;
    }

    // Allow authenticated users to create and read attendance records
    match /attendance/{attendanceId} {
      allow create, read: if request.auth != null;
    }
  }
}
